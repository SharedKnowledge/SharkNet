<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/ChatInfo">
        <ImageView
                android:layout_width="match_parent"
                android:id="@+id/ChatPicture" android:background="@drawable/ic_account_circle_pink_500_48dp"
                android:scaleType="fitCenter" android:adjustViewBounds="false"
                android:baselineAlignBottom="false" android:layout_height="207dp"
        />
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/ChatSettings"/>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/ChatMember"/>
</LinearLayout>