<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="12dp"
            android:id="@+id/view2"
            app:cardCornerRadius="40dp"
            android:layout_alignParentStart="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">
        <ImageView
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:id="@+id/contact_image"
                android:layout_centerHorizontal="true">
        </ImageView>

    </android.support.v7.widget.CardView>
    <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/contact_key_layout"
    >
        <ImageView
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:id="@+id/msg_key"
                android:visibility="visible"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_vpn_key_pink_700_18dp"
        >
        </ImageView>
        <!--  //TODO: icon src anpassen wegen der Farbe!-->
        <ImageView
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:id="@+id/msg_key_grey"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:src="@drawable/ic_vpn_key_pink_700_18dp"
        >

        </ImageView>

    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content"
                  android:layout_toEndOf="@+id/contact_key_layout"
                  android:layout_gravity="center_horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/contact_nickname"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/contact_name"
        />

    </LinearLayout>

</RelativeLayout>
