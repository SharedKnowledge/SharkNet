    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_label_smtp_server"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_conversion_absoluteHeight="21dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="231dp"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        android:layout_marginLeft="@dimen/account_margin_outside"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/account_margin_outside"/>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_label_pop_server"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_conversion_absoluteHeight="21dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="231dp"
        android:layout_marginTop="@dimen/account_text_view_gap"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        android:layout_marginLeft="@dimen/account_margin_outside"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/account_margin_outside"/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_label_password"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_conversion_absoluteHeight="21dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="231dp"
        android:layout_marginTop="@dimen/account_text_view_gap"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        android:layout_marginLeft="@dimen/account_margin_outside"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/account_margin_outside"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_label_username"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_conversion_absoluteHeight="21dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="231dp"
        android:layout_marginTop="@dimen/account_text_view_gap"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        android:layout_marginLeft="@dimen/account_margin_outside"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/account_margin_outside"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_label_mail"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_conversion_absoluteHeight="21dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="231dp"
        android:layout_marginTop="@dimen/account_text_view_gap"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        android:layout_marginLeft="@dimen/account_margin_outside"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/account_margin_outside"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_label_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_conversion_absoluteHeight="21dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="231dp"
        android:layout_marginLeft="@dimen/account_margin_outside"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/account_text_view_gap"
        app:layout_constraintTop_toBottomOf="@+id/contact_image"
        android:layout_marginStart="@dimen/account_margin_outside"/>

    <EditText
        android:id="@+id/editText_account_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView13"
        android:layout_marginLeft="@dimen/account_align_edit_text"
        app:layout_constraintLeft_toLeftOf="@+id/editText_account_mail"
        android:layout_marginRight="@dimen/account_margin_outside"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="@dimen/account_align_edit_text"
        android:layout_marginEnd="@dimen/account_margin_outside"/>

    <EditText
        android:id="@+id/editText_account_mail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView12"
        android:layout_marginLeft="@dimen/account_align_edit_text"
        app:layout_constraintLeft_toLeftOf="@+id/editText_account_username"
        android:layout_marginRight="@dimen/account_margin_outside"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/account_align_edit_text"
        android:layout_marginEnd="@dimen/account_margin_outside"/>

    <EditText
        android:id="@+id/editText_account_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView14"
        android:layout_marginLeft="@dimen/account_align_edit_text"
        app:layout_constraintLeft_toLeftOf="@+id/editText_account_password"
        android:layout_marginRight="@dimen/account_margin_outside"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/account_align_edit_text"
        android:layout_marginEnd="@dimen/account_margin_outside"/>

    <EditText
        android:id="@+id/editText_account_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView15"
        android:layout_marginLeft="@dimen/account_align_edit_text"
        app:layout_constraintLeft_toLeftOf="@+id/editText_account_pop_server"
        android:layout_marginRight="@dimen/account_margin_outside"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        android:layout_marginStart="@dimen/account_align_edit_text"
        android:layout_marginEnd="@dimen/account_margin_outside"/>

    <EditText
        android:id="@+id/editText_account_pop_server"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView16"
        android:layout_marginLeft="@dimen/account_align_edit_text"
        app:layout_constraintLeft_toLeftOf="@+id/editText_account_smtp_server"
        android:layout_marginRight="@dimen/account_margin_outside"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/account_align_edit_text"
        android:layout_marginEnd="@dimen/account_margin_outside"/>

    <EditText
        android:id="@+id/editText_account_smtp_server"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView17"
        app:layout_constraintLeft_toRightOf="@+id/textView17"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="@dimen/account_margin_outside"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/account_margin_outside"
        app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/button_account_test_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_button_test_mail"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textView_server_test_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:text="@string/account_status_mail_settings_untested"
        app:layout_constraintLeft_toRightOf="@+id/button_account_test_mail"
        android:layout_marginStart="26dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_account_test_mail"/>

    <Button
        android:id="@+id/entry_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/entry_profile"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="457dp"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="13dp"/>


</android.support.constraint.ConstraintLayout>
