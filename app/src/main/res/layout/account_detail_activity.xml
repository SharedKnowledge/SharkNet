<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mApp="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    mApp:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".contact.ContactDetailActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/contact_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/contact_image_description"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:nestedScrollingEnabled="false"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_person_accent_48dp"
        mApp:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        mApp:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        mApp:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_label_smtp_server"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_conversion_absoluteHeight="21dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="231dp"
        android:layout_marginTop="@dimen/account_text_view_gap"
        mApp:layout_constraintTop_toBottomOf="@+id/textView16"
        android:layout_marginLeft="@dimen/account_margin_outside"
        mApp:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/account_margin_outside"/>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_label_pop_server"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_conversion_absoluteHeight="21dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="231dp"
        android:layout_marginTop="@dimen/account_text_view_gap"
        mApp:layout_constraintTop_toBottomOf="@+id/textView15"
        android:layout_marginLeft="@dimen/account_margin_outside"
        mApp:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/account_margin_outside"/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_label_password"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_conversion_absoluteHeight="21dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="231dp"
        android:layout_marginTop="@dimen/account_text_view_gap"
        mApp:layout_constraintTop_toBottomOf="@+id/textView14"
        android:layout_marginLeft="@dimen/account_margin_outside"
        mApp:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/account_margin_outside"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_label_username"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_conversion_absoluteHeight="21dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="231dp"
        android:layout_marginTop="@dimen/account_text_view_gap"
        mApp:layout_constraintTop_toBottomOf="@+id/textView12"
        android:layout_marginLeft="@dimen/account_margin_outside"
        mApp:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/account_margin_outside"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_label_mail"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_conversion_absoluteHeight="21dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="231dp"
        android:layout_marginTop="@dimen/account_text_view_gap"
        mApp:layout_constraintTop_toBottomOf="@+id/textView13"
        android:layout_marginLeft="@dimen/account_margin_outside"
        mApp:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/account_margin_outside"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_label_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_conversion_absoluteHeight="21dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="231dp"
        android:layout_marginLeft="@dimen/account_margin_outside"
        mApp:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/account_text_view_gap"
        mApp:layout_constraintTop_toBottomOf="@+id/contact_image"
        android:layout_marginStart="@dimen/account_margin_outside"/>

    <EditText
        android:id="@+id/editText_account_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        mApp:layout_constraintBaseline_toBaselineOf="@+id/textView13"
        android:layout_marginLeft="@dimen/account_align_edit_text"
        mApp:layout_constraintLeft_toLeftOf="@+id/editText_account_mail"
        android:layout_marginRight="@dimen/account_margin_outside"
        mApp:layout_constraintRight_toRightOf="parent"
        mApp:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="@dimen/account_align_edit_text"
        android:layout_marginEnd="@dimen/account_margin_outside"/>

    <EditText
        android:id="@+id/editText_account_mail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        mApp:layout_constraintBaseline_toBaselineOf="@+id/textView12"
        android:layout_marginLeft="@dimen/account_align_edit_text"
        mApp:layout_constraintLeft_toLeftOf="@+id/editText_account_username"
        android:layout_marginRight="@dimen/account_margin_outside"
        mApp:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/account_align_edit_text"
        android:layout_marginEnd="@dimen/account_margin_outside"/>

    <EditText
        android:id="@+id/editText_account_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        mApp:layout_constraintBaseline_toBaselineOf="@+id/textView14"
        android:layout_marginLeft="@dimen/account_align_edit_text"
        mApp:layout_constraintLeft_toLeftOf="@+id/editText_account_password"
        android:layout_marginRight="@dimen/account_margin_outside"
        mApp:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/account_align_edit_text"
        android:layout_marginEnd="@dimen/account_margin_outside"/>

    <EditText
        android:id="@+id/editText_account_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        mApp:layout_constraintBaseline_toBaselineOf="@+id/textView15"
        android:layout_marginLeft="@dimen/account_align_edit_text"
        mApp:layout_constraintLeft_toLeftOf="@+id/editText_account_pop_server"
        android:layout_marginRight="@dimen/account_margin_outside"
        mApp:layout_constraintRight_toRightOf="parent"
        mApp:layout_constraintHorizontal_bias="0.75"
        android:layout_marginStart="@dimen/account_align_edit_text"
        android:layout_marginEnd="@dimen/account_margin_outside"/>

    <EditText
        android:id="@+id/editText_account_pop_server"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        mApp:layout_constraintBaseline_toBaselineOf="@+id/textView16"
        android:layout_marginLeft="@dimen/account_align_edit_text"
        mApp:layout_constraintLeft_toLeftOf="@+id/editText_account_smtp_server"
        android:layout_marginRight="@dimen/account_margin_outside"
        mApp:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/account_align_edit_text"
        android:layout_marginEnd="@dimen/account_margin_outside"/>

    <EditText
        android:id="@+id/editText_account_smtp_server"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        mApp:layout_constraintBaseline_toBaselineOf="@+id/textView17"
        mApp:layout_constraintLeft_toRightOf="@+id/textView17"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="@dimen/account_margin_outside"
        mApp:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/account_margin_outside"
        mApp:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/button_account_test_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_button_test_mail"
        mApp:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        mApp:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textView_server_test_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:text="@string/account_status_mail_settings_untested"
        mApp:layout_constraintLeft_toRightOf="@+id/button_account_test_mail"
        android:layout_marginStart="26dp"
        mApp:layout_constraintBaseline_toBaselineOf="@+id/button_account_test_mail"/>


</android.support.constraint.ConstraintLayout>
