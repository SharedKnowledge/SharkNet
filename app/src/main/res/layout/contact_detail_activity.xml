<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mApp="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    mApp:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".contact.ContactDetailActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <ImageView
        android:id="@+id/contact_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/contact_image_description"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:nestedScrollingEnabled="false"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_person_accent_48dp"
        mApp:layout_constraintLeft_toLeftOf="parent"
        mApp:layout_constraintRight_toRightOf="parent"
        mApp:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="19dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="@string/contact_label_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        mApp:layout_constraintLeft_toLeftOf="parent"
        tools:layout_conversion_absoluteHeight="21dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="231dp"
        android:layout_marginTop="24dp"
        mApp:layout_constraintTop_toBottomOf="@+id/contact_image"/>

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:theme="@style/MyEditTextTheme"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="253dp"
        tools:layout_conversion_absoluteWidth="216dp"
        tools:layout_conversion_absoluteHeight="42dp"
        mApp:layout_constraintBaseline_toBaselineOf="@+id/textView7"
        mApp:layout_constraintLeft_toRightOf="@+id/textView7"
        android:layout_marginLeft="32dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/contact_label_email"
        android:textAppearance="?android:attr/textAppearanceMedium"
        mApp:layout_constraintLeft_toLeftOf="parent"
        mApp:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_conversion_absoluteHeight="21dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="295dp"/>

    <TextView
        android:id="@+id/contact_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:theme="@style/MyEditTextTheme"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="317dp"
        tools:layout_conversion_absoluteWidth="216dp"
        tools:layout_conversion_absoluteHeight="42dp"
        mApp:layout_constraintBaseline_toBaselineOf="@+id/textView6"
        android:layout_marginLeft="0dp"
        mApp:layout_constraintLeft_toLeftOf="@+id/contact_name"/>


    <Button
        android:id="@+id/contact_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="@string/contact_button_block"
        android:textAllCaps="false"
        android:theme="@style/Button.alert"
        mApp:layout_constraintRight_toLeftOf="@+id/contact_delete"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="328dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="360dp"
        mApp:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/contact_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_button_delete"
        android:textAllCaps="false"
        android:theme="@style/Button.alert"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="328dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="408dp"
        android:layout_marginRight="16dp"
        mApp:layout_constraintRight_toRightOf="parent"
        mApp:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_button_key"
        android:theme="@style/Button.accent"
        android:layout_marginLeft="30dp"
        mApp:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        mApp:layout_constraintTop_toBottomOf="@+id/textView6"/>


</android.support.constraint.ConstraintLayout>
