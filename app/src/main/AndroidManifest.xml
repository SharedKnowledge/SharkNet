<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="net.sharksystem.sharknet">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS"/>
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"/>
    <uses-permission android:name="android.permission.CAPTURE_VIDEO_OUTPUT"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application
        android:name=".SharkApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:replace="android:icon, android:theme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".contact.ContactsActivity"
            android:label="@string/activity_title_contacts"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
            android:name=".chat.ChatActivity"
            android:label="@string/activity_title_chat"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
            android:name=".inbox.InboxActivity"
            android:label="@string/activity_title_inbox"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
            android:name=".profile.ProfileActivity"
            android:label="@string/activity_title_profile"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
            android:name=".chat.ChatMessageDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/activity_title_chat_message_detail"
            android:parentActivityName=".chat.ChatDetailActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".chat.ChatDetailActivity"/>
        </activity>

        <activity
            android:name=".chat.ChatDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/activity_title_chat_detail"
            android:parentActivityName=".chat.ChatActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".chat.ChatActivity"/>
        </activity>
        <activity
            android:name=".chat.ChatNewActivity"
            android:label="@string/activity_title_chat_new"
            android:parentActivityName=".chat.ChatActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".chat.ChatActivity"/>
        </activity>
        <activity
            android:name=".contact.ContactsDetailActivity"
            android:label="@string/activity_title_con_detail_view"
            android:parentActivityName=".contact.ContactsActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".contact.ContactsActivity"/>
        </activity>
        <activity
            android:name=".profile.ProfileDetailActivity"
            android:label="@string/activity_title_profile_detail"
            android:parentActivityName=".profile.ProfileActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".profile.ProfileActivity"/>
        </activity>
        <activity
            android:name=".contact.ContactsNewActivity"
            android:label="@string/activity_title_con_new"
            android:parentActivityName=".contact.ContactsActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".contact.ContactsActivity"/>
        </activity>
        <activity
            android:name=".profile.ProfileDetailInterestsActivity"
            android:label="@string/activity_title_profile_detail_interests"
            android:parentActivityName=".profile.ProfileDetailActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".profile.ProfileDetailActivity"/>
        </activity>
        <activity
            android:name=".inbox.InboxNewFeedActivity"
            android:label="@string/activity_title_timeline_detail_view"
            android:parentActivityName=".inbox.InboxActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".inbox.InboxActivity"/>
        </activity>
        <activity
            android:name=".profile.ProfileSettingsActivity"
            android:label="@string/activity_title_profile_settings"
            android:parentActivityName=".profile.ProfileActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".profile.ProfileActivity"/>
        </activity>
        <activity
            android:name=".profile.NewInterestActivity"
            android:label="@string/activity_title_new_interest"
            android:parentActivityName=".profile.ProfileDetailInterestsActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".profile.ProfileDetailInterestsActivity"/>
        </activity>
        <activity
            android:name=".chat.ChatDetailAddContactActivity"
            android:label="@string/activity_title_chat_detail_add_contact"
            android:parentActivityName=".chat.ChatDetailActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".chat.ChatDetailActivity"/>
        </activity>
        <activity
            android:name=".radar.RadarActivity"
            android:label="@string/activity_title_radar"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
            android:name=".chat.ChatDetailSettings"
            android:label="@string/activity_title_chat_detail_settings"
            android:parentActivityName=".chat.ChatDetailActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".chat.ChatDetailActivity"/>
        </activity>
        <activity
            android:name=".nfc.NFCActivity"
            android:label="@string/activity_title_nfc"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
            android:name=".pki.PKIActivity"
            android:label="@string/activity_title_pki"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
            android:name=".pki.PKIDetailActivity"
            android:label="@string/activity_title_pki_detail"
            android:parentActivityName=".pki.PKIActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".pki.PKIActivity"/>
        </activity>
        <activity
            android:name=".profile.ProfileKeys"
            android:label="@string/activity_title_profile_keys"
            android:parentActivityName=".profile.ProfileActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".profile.ProfileActivity"/>
        </activity>
    </application>

</manifest>